<div style="font-family:arial; font-size:12px; background: #ffffff; color: #111317;">
    {% mjml %}
        <mjml>
            <mj-body>
                {% block header %}
                    {{ include('@systemEmail/_global/html/header.html.twig') }}
                {% endblock %}

                <mj-section>
                    <mj-column>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.firstName }} {{ data.lastName }} hat eine Kooperationsanfrage geschickt. Bitte kümmer dich
                            schnellstmöglich darum.
                        </mj-text>
                    </mj-column>
                </mj-section>

                <mj-section>
                    <mj-column>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            Vorname
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.firstName }}
                        </mj-text>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            Nachname
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.lastName }}
                        </mj-text>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            E-Mail
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.email }}
                        </mj-text>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            Art der Zusammenarbeit
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.reason | trans }}
                        </mj-text>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            Position
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.personDetail | trans }}
                        </mj-text>
                        <mj-text font-size="13px" font-weight="bold" font-family="helvetica">
                            Nachricht
                        </mj-text>
                        <mj-text font-size="13px" font-family="helvetica">
                            {{ data.message | raw }}
                        </mj-text>
                    </mj-column>
                </mj-section>

                <mj-section>
                    <mj-column>
                        <mj-button background-color="#E4545A" color="#ffffff" href="https://admin.storysh.de/#/cooperation/edit/{{ data.id }}">
                            Zu der Anfrage
                        </mj-button>
                    </mj-column>
                </mj-section>


                {% block footer %}
                    {{ include('@systemEmail/_global/html/footer.html.twig') }}
                {% endblock %}
            </mj-body>
        </mjml>
    {% endmjml %}
</div>
